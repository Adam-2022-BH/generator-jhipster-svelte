@tailwind base;
@tailwind components;

.fa-icon {
	@apply w-4 h-4 overflow-visible inline-block fill-current;
}

.btn {
	@apply py-2 px-6 font-bold rounded transition-colors duration-200;
}

.btn-sm {
	@apply py-2 px-2 font-semibold rounded transition-colors duration-200;
}

.btn-primary {
	@apply bg-blue-700 text-white;
}

.btn-primary:hover:not(:disabled) {
	@apply bg-blue-800;
}

.btn-primary:disabled {
	@apply bg-blue-400 opacity-75 pointer-events-none;
}

.btn-action {
	@apply btn-sm px-3 text-gray-600;
}

.btn-action:hover:not(:disabled) {
	@apply bg-gray-300 text-gray-900;
}

.btn-action:disabled {
	@apply opacity-75 pointer-events-none;
}

@tailwind utilities;
